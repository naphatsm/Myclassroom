<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="200dp"
    android:layout_gravity="center">
    <LinearLayout
        android:id="@+id/hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="30dp"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/am9"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:text="9 AM"
                android:gravity="center"/>
            <TextView
                android:id="@+id/am10"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:text="10 AM"
                android:gravity="center"/>
            <TextView
                android:id="@+id/am11"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:text="11 AM"
                android:gravity="center"/>
            <TextView
                android:id="@+id/am12"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:text="12 AM"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/pm1"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:text="1 PM"
                android:gravity="center"/>
            <TextView
                android:id="@+id/pm4"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:text="2 PM"
                android:gravity="center"/>
            <TextView
                android:id="@+id/pm5"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:text="3 PM"
                android:gravity="center"/>
            <TextView
                android:id="@+id/pm6"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:text="4 PM"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/m0"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text=":00"
                android:gravity="center"/>
            <TextView
                android:id="@+id/m1"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text=":05"
                android:gravity="center"/>
            <TextView
                android:id="@+id/m2"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text=":10"
                android:gravity="center"/>
            <TextView
                android:id="@+id/m3"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text=":15"
                android:gravity="center"/>
            <TextView
                android:id="@+id/m4"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text=":20"
                android:gravity="center"/>
            <TextView
                android:id="@+id/m5"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text=":25"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/m6"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text=":30"
                android:gravity="center"/>
            <TextView
                android:id="@+id/m7"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text=":35"
                android:gravity="center"/>
            <TextView
                android:id="@+id/m8"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text=":40"
                android:gravity="center"/>
            <TextView
                android:id="@+id/m9"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text=":45"
                android:gravity="center"/>
            <TextView
                android:id="@+id/m10"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text=":50"
                android:gravity="center"/>
            <TextView
                android:id="@+id/m11"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text=":55"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>